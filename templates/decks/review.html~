<script>
function showTranslation() {
    document.getElementById('translation').classList.remove('hidden');
    document.getElementById('showAnswerSection').classList.add('hidden');
    document.getElementById('ratingSection').classList.remove('hidden');

    // Автовоспроизведение аудио перевода
    const translationAudio = document.querySelector('#translation audio');
    if (translationAudio) {
        translationAudio.play();
    }
}

// Автовоспроизведение оригинального аудио при загрузке страницы
document.addEventListener('DOMContentLoaded', function() {
    const originalAudio = document.querySelector('audio');
    if (originalAudio) {
        originalAudio.play();
    }
});
</script>
