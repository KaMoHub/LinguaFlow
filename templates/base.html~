    <!-- Tailwind CSS CDN -->
    <script>
        // Включаем поддержку темной темы в Tailwind
        tailwind.config = {
            darkMode: 'class', // или 'media' для автоматического определения по системным настройкам
        }
    </script>
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Иконки -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <!-- Кастомные стили -->
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        /* Дополнительные стили для темной темы, если нужно */
        .dark .bg-gray-50 {
            background-color: #1a202c; /* например */
        }
    </style>
</head>
<body class="bg-gray-50 dark:bg-gray-900 min-h-screen transition-colors duration-200">
    <!-- Header -->
    {% include 'includes/header.html' %}

    <!-- Кнопка переключения темы (пример размещения) -->
    <button id="theme-toggle" class="fixed top-4 right-4 p-2 rounded-full bg-gray-100 dark:bg-gray-500 text-gray-800 dark:text-gray-200 z-50">
        <i class="fas fa-moon dark:hidden"></i> <!-- Иконка луны (для светлой темы) -->
        <i class="fas fa-sun hidden dark:block"></i> <!-- Иконка солнца (для темной темы) -->
    </button>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <!-- Сообщения -->
